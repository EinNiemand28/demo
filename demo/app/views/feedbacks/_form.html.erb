<%= form_with(model: [event, feedback], local: true) do |f| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "错误") %> 阻止反馈被保存：</h2>
      <ul>
        <% feedback.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rating, "评分" %><br />
    <%= f.select :rating, options_for_select((1..5).map { |r| [r, r] }), prompt: "请选择评分" %>
  </div>

  <div class="field">
    <%= f.label :comment, "评论" %><br />
    <%= f.text_area :comment %>
  </div>

  <div class="field">
    <%= f.label :is_anonymous, "匿名提交" %>
    <%= f.check_box :is_anonymous %>
  </div>  

  <div class="actions">
    <%= f.submit '提交反馈'%>
  </div>
<% end %>