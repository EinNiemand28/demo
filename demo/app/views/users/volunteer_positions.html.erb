<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
          <h4 class="card-title mb-0">
            <i class="bi bi-person-workspace me-2"></i>我的岗位申请
          </h4>
          <span class="badge bg-primary">
            共 <%= @applications.total_count %> 个申请
          </span>
        </div>
      </div>

      <% if @applications.any? %>
        <div class="row g-4">
          <% @applications.each do |application| %>
            <div class="col-md-6 col-lg-4">
              <div class="card h-100">
                <div class="card-body">
                  <div class="d-flex justify-content-between align-items-start mb-2">
                    <h5 class="card-title mb-0">
                      <%= link_to application.volunteer_position.name, 
                            event_volunteer_position_path(application.volunteer_position.event, application.volunteer_position), 
                            class: "text-decoration-none" %>
                    </h5>
                    <span class="badge <%= registration_status_badge_class(application.status) %>">
                      <%= registration_status(application.status) %>
                    </span>
                  </div>
                  
                  <div class="text-muted small mb-3">
                    <div>
                      <i class="bi bi-calendar-event me-1"></i>
                      <%= link_to application.volunteer_position.event.title,
                            event_path(application.volunteer_position.event),
                            class: "text-decoration-none" %>
                    </div>
                    <div><i class="bi bi-clock me-1"></i><%= application.volunteer_position.volunteer_hours %> 小时</div>
                    <div><i class="bi bi-calendar-check me-1"></i>申请时间：<%= l application.created_at, format: :short %></div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <div class="d-flex justify-content-center mt-4">
          <%= paginate @applications %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-person-x text-muted" style="font-size: 4rem;"></i>
          <h5 class="mt-3 text-muted">暂无岗位申请</h5>
        </div>
      <% end %>
    </div>
  </div>
</div>