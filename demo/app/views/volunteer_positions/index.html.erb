<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body p-4">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center gap-3">
          <h4 class="card-title mb-0">
            <i class="bi bi-person-workspace me-2"></i>志愿者岗位
          </h4>
          <span class="badge bg-primary">
            共 <%= @volunteer_positions.count %> 个岗位
          </span>
        </div>
        
        <% if Current.user.admin? || Current.user == @event.organizing_teacher %>
          <%= link_to new_event_volunteer_position_path(@event), class: "btn btn-primary" do %>
            <i class="bi bi-plus-lg me-1"></i>添加岗位
          <% end %>
        <% end %>
      </div>

      <% if @volunteer_positions.any? %>
        <div class="row g-4">
          <% @volunteer_positions.each do |position| %>
            <div class="col-md-6">
              <div class="card h-100">
                <div class="card-body">
                  <h5 class="card-title d-flex justify-content-between align-items-center">
                    <%= position.name %>
                    <span class="badge bg-info">
                      <%= position.student_volunteer_positions.approved.count %>/<%= position.required_number %>
                    </span>
                  </h5>
                  
                  <p class="card-text text-muted small mb-3" style="height: 3em; overflow: hidden;">
                    <%= truncate(position.description, length: 100) %>
                  </p>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="text-muted small">
                      <div><i class="bi bi-clock me-1"></i><%= position.volunteer_hours %> 小时</div>
                      <div>
                        <i class="bi bi-calendar-event me-1"></i>
                        截止：<%= l position.registration_deadline, format: :short %>
                      </div>
                    </div>
                    
                    <div class="btn-group">
                      <%= link_to event_volunteer_position_path(@event, position), 
                            class: "btn btn-sm btn-outline-primary" do %>
                        <i class="bi bi-info-circle me-1"></i>详情
                      <% end %>
                      
                      <% if Current.user.admin? || Current.user == @event.organizing_teacher %>
                        <%= link_to edit_event_volunteer_position_path(@event, position),
                              class: "btn btn-sm btn-outline-warning" do %>
                          <i class="bi bi-pencil"></i>
                        <% end %>
                        
                        <%= button_to event_volunteer_position_path(@event, position),
                              method: :delete,
                              class: "btn btn-sm btn-outline-danger",
                              form: { data: { action: "delete-position" } } do %>
                          <i class="bi bi-trash"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="bi bi-person-workspace text-muted" style="font-size: 4rem;"></i>
          <h5 class="mt-3 text-muted">暂无志愿者岗位</h5>
        </div>
      <% end %>

      <div class="mt-4">
        <%= link_to event_path(@event), class: "btn btn-outline-secondary" do %>
          <i class="bi bi-arrow-left me-1"></i>返回活动
        <% end %>
      </div>
    </div>
  </div>
</div>