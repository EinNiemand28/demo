<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h4 class="card-title mb-0">
      <i class="bi bi-heart me-2"></i>我的收藏
    </h4>
  </div>

  <% if @favorites.any? %>
    <div class="row row-cols-1 row-cols-md-2 g-4">
      <% @favorites.each do |favorite| %>
        <% product = favorite.product %>
        <div class="col">
          <div class="card h-100 shadow-sm rounded-3">
            <div class="row g-0 h-100">
              <div class="col-md-4 h-100">
                <div class="position-relative h-100">
                  <% if product.image.attached? %>
                    <%= image_tag product.image_variant(:medium), 
                          class: "img-fluid rounded-start w-100 h-100", 
                          style: "object-fit: cover; position: absolute; top: 0; left: 0;" %>
                  <% else %>
                    <%= image_tag "default_product.png", 
                          class: "img-fluid rounded-start w-100 h-100", 
                          style: "object-fit: cover; position: absolute; top: 0; left: 0;" %>
                  <% end %>
                </div>
              </div>
              <div class="col-md-8">
                <div class="d-flex flex-column h-100">
                  <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between mb-3">
                      <h5 class="card-title fs-4 fw-bold mb-0 text-primary">
                        <%= link_to product.name, product_path(product), class: "text-decoration-none text-primary" %>
                      </h5>
                      <span class="badge bg-light text-secondary border">
                        <i class="bi bi-diagram-2 me-1"></i>
                        <%= product.category.full_path %>
                      </span>
                    </div>
                    <p class="card-text text-muted lh-base mb-3 mx-2">
                      <%= truncate(product.description, length: 100) %>
                    </p>
                    <p class="card-text mb-2">
                      <span class="badge bg-danger px-3 py-2 fs-6">
                        ¥<%= number_with_precision(product.price, precision: 2) %>
                      </span>
                      <span class="badge bg-light text-dark border ms-2">
                        <i class="bi bi-box-seam me-1"></i>库存: <%= product.stock %>
                      </span>
                    </p>
                  </div>
                  <div class="card-footer">
                    <div class="d-flex justify-content-end">
                      <div class="btn-group">
                        <%= link_to product_path(product), class: "btn btn-success" do %>
                          <i class="bi bi-info-circle me-1"></i>详情
                        <% end %>
                        <button type="button" 
                                class="btn btn-danger"
                                data-action="remove-favorite"
                                data-favorite-id="<%= favorite.id %>">
                          <i class="bi bi-heart-fill me-1"></i>取消收藏
                        </button>
                        <button type="button" 
                                class="btn btn-primary"
                                data-action="add-to-cart"
                                data-product-id="<%= product.id %>">
                          <i class="bi bi-cart-plus me-1"></i>加入购物车
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-5">
      <i class="bi bi-heart text-muted" style="font-size: 4rem;"></i>
      <h5 class="mt-3 text-muted">还没有收藏任何商品</h5>
      <%= link_to products_path, class: "btn btn-primary mt-3" do %>
        <i class="bi bi-shop me-1"></i>去逛逛
      <% end %>
    </div>
  <% end %>
</div>

<% content_for :page_scripts do %>
<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('[data-action="remove-favorite"]').forEach(button => {
    button.addEventListener('click', (e) => {
      const favoriteId = e.target.closest('[data-action="remove-favorite"]').dataset.favoriteId
      
      if (confirm('确定要取消收藏此商品吗？')) {
        fetch(`/favorites/${favoriteId}`, {
          method: 'DELETE',
          headers: {
            'Accept': 'application/json',
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
          }
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            showToast({
              message: data.message,
              type: 'success',
              delay: 1000
            })
            setTimeout(() => {
              e.target.closest('.col').remove()
              if (document.querySelectorAll('.col').length === 0) {
                window.location.reload()
              }
            }, 1000)
          } else {
            showToast({
              message: data.message,
              type: 'danger',
              delay: 3000
            })
          }
        })
        .catch(() => {
          showToast({
            message: '系统错误，请稍后重试',
            type: 'danger',
            delay: 3000
          })
        })
      }
    })
  })

  document.querySelectorAll('[data-action="add-to-cart"]').forEach(button => {
    button.addEventListener('click', (e) => {
      const productId = e.target.closest('[data-action="add-to-cart"]').dataset.productId
      
      fetch(`/cart/cart_items`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'Accept': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        },
        body: JSON.stringify({ product_id: productId })
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          showToast({
            message: data.message,
            type: 'success',
            delay: 1000
          })
        } else {
          showToast({
            message: data.message || '添加失败',
            type: 'danger',
            errors: data.errors,
            delay: 3000
          })
        }
      })
      .catch(error => {
        showToast({
          message: '系统错误，请稍后重试',
          type: 'danger',
          delay: 3000
        })
      })
    })
  })
})
</script>
<% end %>