<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h4 class="card-title mb-0">
              <i class="bi bi-receipt me-2"></i>订单详情
            </h4>
            <div>
              <% if @order.can_delete? || Current.user.admin? || Current.user.worker? %>
                <button type="button" 
                        class="btn btn-danger"
                        data-action="delete-order"
                        data-order-id="<%= @order.id %>">
                  <i class="bi bi-trash me-1"></i>删除订单
                </button>
              <% end %>
            </div>
          </div>

          <div class="row mb-4">
            <div class="col-md-6">
              <p class="mb-1">
                <span class="text-muted">订单编号：</span>
                <%= @order.id %>
              </p>
              <p class="mb-1">
                <span class="text-muted">订单状态：</span>
                <span class="badge <%= order_status_badge_class(@order.status) %>">
                  <%= t("statuses.#{@order.status}") %>
                </span>
              </p>
              <p class="mb-1">
                <span class="text-muted">创建时间：</span>
                <%= l @order.created_at, format: :long %>
              </p>
            </div>
            <div class="col-md-6">
              <p class="mb-1">
                <span class="text-muted">订单金额：</span>
                <span class="text-danger fs-4">¥<%= number_with_precision(@order.total_amount, precision: 2) %></span>
              </p>
            </div>
          </div>

          <div class="mb-4">
            <h5 class="card-title mb-3">收货信息</h5>
            <div class="card">
              <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                      <h6 class="mb-1">
                        <span class="text-primary">
                          <%= @order.address.name %>
                        </span>
                        <span class="text-muted"><%= @order.address.phone %></span>
                      </h6>
                      <p class="mb-1 text-muted small"><%= @order.address.postcode %></p>
                    </div>
                    
                    <div class="col-md-6">
                      <p class="mb-0 h-100 d-flex align-items-center">
                        <%= @order.address.content %>
                      </p>
                    </div>
                </div>
              </div>
            </div>
          </div>

          <div>
            <h5 class="card-title mb-3">商品清单</h5>
            <div class="table-responsive">
              <table class="table">
                <thead class="table-light">
                  <tr>
                    <th>商品信息</th>
                    <th>单价</th>
                    <th>数量</th>
                    <th>小计</th>
                  </tr>
                </thead>
                <tbody>
                  <% @order.order_items.each do |item| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <%= image_tag item.product.image_variant(:thumb), 
                                class: "rounded me-3",
                                style: "width: 64px; height: 64px; object-fit: cover;" %>
                          <div>
                            <div class="fw-bold"><%= item.product.name %></div>
                          </div>
                        </div>
                      </td>
                      <td>¥<%= number_with_precision(item.price, precision: 2) %></td>
                      <td><%= item.quantity %></td>
                      <td class="text-danger">¥<%= number_with_precision(item.price * item.quantity, precision: 2) %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <h5 class="card-title mb-3">订单操作</h5>
            <div class="btn-group">
              <% if @order.unpaid? %>
                <% if @order.user == Current.user %>
                  <button type="button" 
                          class="btn btn-success me-2"
                          data-action="update-status"
                          data-order-id="<%= @order.id %>"
                          data-status="paid">
                    <i class="bi bi-credit-card me-1"></i>付款
                  </button>
                  
                  <button type="button" 
                          class="btn btn-danger"
                          data-action="update-status"
                          data-order-id="<%= @order.id %>"
                          data-status="canceled">
                    <i class="bi bi-x-circle me-1"></i>取消订单
                  </button>
                <% end %>
              <% end %>

              <% if @order.paid? && (Current.user.admin? || Current.user.worker?) %>
                <button type="button" 
                        class="btn btn-primary me-2"
                        data-action="update-status"
                        data-order-id="<%= @order.id %>"
                        data-status="shipped">
                  <i class="bi bi-truck me-1"></i>发货
                </button>
              <% end %>

              <% if @order.shipped? && @order.user == Current.user %>
                <button type="button" 
                        class="btn btn-success me-2"
                        data-action="update-status"
                        data-order-id="<%= @order.id %>"
                        data-status="completed">
                  <i class="bi bi-check-circle me-1"></i>确认收货
                </button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% content_for :page_scripts do %>
<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('[data-action="update-status"]').forEach(button => {
    button.addEventListener('click', (e) => {
      const orderId = e.target.dataset.orderId
      const status = e.target.dataset.status
      const confirmMessages = {
        'paid': '确认付款？付款后无法撤销',
        'canceled': '确定要取消订单吗？取消后无法恢复',
        'shipped': '确认发货？发货后无法撤销',
        'completed': '确认收到货物？确认后无法撤销'
      }
      
      if (confirm(confirmMessages[status])) {
        fetch(`/orders/${orderId}/update_status`, {
          method: 'PATCH',
          headers: {
            'Content-Type': 'application/json',
            'Accept': 'application/json',
            'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
          },
          body: JSON.stringify({ status: status })
        })
        .then(response => {
          if (!response.ok) throw new Error('Network response was not ok')
          return response.json()
        })
        .then(data => {
          if (data.success) {
            showToast({
              message: data.message,
              type: 'success',
              delay: 1000
            })
            setTimeout(() => {
              window.location.reload()
            }, 1000)
          } else {
            showToast({
              message: data.message,
              type: 'danger',
              delay: 3000
            })
          }
        })
        .catch(() => {
          showToast({
            message: '系统错误，请稍后重试',
            type: 'danger',
            delay: 3000
          })
        })
      }
    })
  })

  document.querySelector('[data-action="delete-order"]')?.addEventListener('click', (e) => {
    const orderId = e.target.dataset.orderId
    
    if (confirm('确定要删除此订单吗？删除后无法恢复')) {
      fetch(`/orders/${orderId}`, {
        method: 'DELETE',
        headers: {
          'Accept': 'application/json',
          'X-CSRF-Token': document.querySelector('[name="csrf-token"]').content
        }
      })
      .then(response => {
        if (!response.ok) throw new Error('Network response was not ok')
        return response.json()
      })
      .then(data => {
        if (data.success) {
          showToast({
            message: data.message,
            type: 'success',
            delay: 1000
          })
          setTimeout(() => {
            window.location.href = data.redirect_url
          }, 1000)
        } else {
          showToast({
            message: data.message,
            type: 'danger',
            delay: 3000
          })
        }
      })
      .catch(() => {
        showToast({
          message: '系统错误，请稍后重试',
          type: 'danger',
          delay: 3000
        })
      })
    }
  })
})
</script>
<% end %>